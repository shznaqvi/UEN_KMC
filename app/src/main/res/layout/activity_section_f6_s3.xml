                            android:checked="@{form.f6303.equals(`3`)}"
                            android:onClick="@{()->form.setF6303(`3`)}"
                            android:text="@string/f6303c" />

                        <RadioButton
                            android:id="@+id/f6303d"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="@{form.f6303.equals(`4`)}"
                            android:onClick="@{()->form.setF6303(`4`)}"
                            android:text="@string/f6303d" />

                        <RadioButton
                            android:id="@+id/f6303e"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="@{form.f6303.equals(`5`)}"
                            android:onClick="@{()->form.setF6303(`5`)}"
                            android:text="@string/f6303e" />

                        <RadioButton
                            android:id="@+id/f6303f"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="@{form.f6303.equals(`6`)}"
                            android:onClick="@{()->form.setF6303(`6`)}"
                            android:text="@string/f6303f" />

                        <RadioButton
                            android:id="@+id/f6303g"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="@{form.f6303.equals(`7`)}"
                            android:onClick="@{()->form.setF6303(`7`)}"
                            android:text="@string/f6303g" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- f6304  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVf6304"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
