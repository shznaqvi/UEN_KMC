                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/f7201" />
                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/f7201"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/f7201a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="@{form.f7201.equals(`1`)}"
