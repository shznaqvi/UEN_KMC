                            android:id="@+id/f7203c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="@{form.f7203c.equals(`3`)}"
                            android:onClick="@{()->form.setF7203c(form.f7203c.equals(`3`)?``:`3`)}"
                            android:text="@string/f7203c" />

