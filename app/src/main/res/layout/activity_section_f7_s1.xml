                            android:id="@+id/f7203d"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="@{form.f7203d.equals(`4`)}"
                            android:onClick="@{()->form.setF7203d(form.f7203d.equals(`4`)?``:`4`)}"
                            android:text="@string/f7203d" />

                        <CheckBox
                            android:id="@+id/f7203e"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="@{form.f7203e.equals(`5`)}"
                            android:onClick="@{()->form.setF7203e(form.f7203e.equals(`5`)?``:`5`)}"
                            android:text="@string/f7203e" />

                        <CheckBox
                            android:id="@+id/f7203f"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="@{form.f7203f.equals(`6`)}"
                            android:onClick="@{()->form.setF7203f(form.f7203f.equals(`6`)?``:`6`)}"
