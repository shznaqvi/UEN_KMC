                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/f7204" />
                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/f7204"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/f7204h"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="@{form.f7204.equals(`1`)}"
                            android:onClick="@{()->form.setF7204(`1`)}"
                            android:text="@string/f7204h" />

                        <com.edittextpicker.aliazaz.EditTextPicker
                            android:id="@+id/f7204hx"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/f7204h"
                            android:inputType="number"
                            android:maxLength="3"
                            android:tag="f7204h"
                            android:text="@={form.f7204hx}"

                            android:visibility='@{f7204h.checked? View.VISIBLE : View.GONE}'

