                            <RadioButton
                                android:id="@+id/f230302"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:checked="@{form.f2303.equals(`2`)}"
                                android:onClick="@{()->form.setF2303(`2`)}"
                                android:text="@string/f230302" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- f2304  CheckBox   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVf2304"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/Q_f2304" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/f2304" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/f2304check"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:tag="0">

                            <CheckBox
                                android:id="@+id/f230401"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.f230401.equals(`1`)}"
                                android:onClick="@{()->form.setF230401(form.f230401.equals(`1`)?``:`1`)}"
                                android:text="@string/f230401" />

                            <CheckBox
                                android:id="@+id/f230402"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.f230402.equals(`2`)}"
                                android:onClick="@{()->form.setF230402(form.f230402.equals(`2`)?``:`2`)}"
                                android:text="@string/f230402" />

                            <CheckBox
                                android:id="@+id/f230403"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.f230403.equals(`3`)}"
                                android:onClick="@{()->form.setF230403(form.f230403.equals(`3`)?``:`3`)}"
                                android:text="@string/f230403" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- f2305  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVf2305"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/Q_f2305" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/f2305" />

                        </LinearLayout>

                        <RadioGroup
                            android:id="@+id/f2305"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/f230501"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:checked="@{form.f2305.equals(`1`)}"
                                android:onClick="@{()->form.setF2305(`1`)}"
                                android:text="@string/f230501" />

                            <RadioButton
                                android:id="@+id/f230502"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:checked="@{form.f2305.equals(`2`)}"
                                android:onClick="@{()->form.setF2305(`2`)}"
                                android:text="@string/f230502" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- f2306  CheckBox   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVf2306"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/Q_f2306" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/f2306" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/f2306check"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:tag="0">

                            <CheckBox
                                android:id="@+id/f230601"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.f230601.equals(`1`)}"
                                android:onClick="@{()->form.setF230601(form.f230601.equals(`1`)?``:`1`)}"
                                android:text="@string/f230601" />

                            <CheckBox
                                android:id="@+id/f230602"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.f230602.equals(`2`)}"
                                android:onClick="@{()->form.setF230602(form.f230602.equals(`2`)?``:`2`)}"
                                android:text="@string/f230602" />

                            <CheckBox
                                android:id="@+id/f230603"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.f230603.equals(`3`)}"
                                android:onClick="@{()->form.setF230603(form.f230603.equals(`3`)?``:`3`)}"
                                android:text="@string/f230603" />

                            <CheckBox
                                android:id="@+id/f230696"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.f230696.equals(`96`)}"
                                android:onClick="@{()->form.setF230696(form.f230696.equals(`96`)?``:`96`)}"
                                android:text="@string/f230696" />

                            <EditText
                                android:id="@+id/f230696x"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:digits="AaBbCcDdEeFfGgHhIiJjKkLlMmNnOoPpQqRrSsTtUuVvWwXxYyZz0123456789,. "
                                android:hint="@string/f230696"
                                android:tag="f230696"
                                android:text="@={form.f230696x}"
                                android:visibility="@{form.f230696.equals(`96`) ? View.VISIBLE : View.GONE}" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <!--EndButton LinearLayout-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_End"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:background="@color/red_overlay"
                        android:onClick="btnEnd"
                        android:text="Cancel"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_Continue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:background="@color/green_overlay"
                        android:onClick="btnContinue"
                        android:text="Save"
                        android:textColor="@color/white" />
                    <!--EndButton LinearLayout-->

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>