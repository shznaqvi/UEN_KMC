                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onCheckedChanged="@{()->f6305.clearCheck() }">

                        <RadioButton
                            android:id="@+id/f6304a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="@{form.f6304.equals(`1`)}"
                            android:onClick="@{()->form.setF6304(`1`)}"
                            android:text="@string/f6304a" />

